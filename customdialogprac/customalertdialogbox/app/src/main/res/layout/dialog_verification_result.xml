<!-- res/layout/dialog_verification_result.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification Results"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/passwordStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password check: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/emailStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email format check: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/termsStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms and conditions: "
        android:textSize="16sp"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/okButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK" />
</LinearLayout>
