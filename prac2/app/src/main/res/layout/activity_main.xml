<!-- res/layout/activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Name Label -->
    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="16sp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <!-- Name Input -->
    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/nameLabel"
        android:layout_alignBaseline="@id/nameLabel"
        android:layout_marginStart="10dp"
        android:hint="Enter your name" />

    <!-- Mobile Number Label -->
    <TextView
        android:id="@+id/numberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Number:"
        android:textSize="16sp"
        android:layout_below="@id/nameInput"
        android:layout_alignStart="@id/nameLabel"
        android:layout_marginTop="20dp" />

    <!-- Mobile Number Input -->
    <EditText
        android:id="@+id/numberInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/numberLabel"
        android:layout_alignBaseline="@id/numberLabel"
        android:layout_marginStart="10dp"
        android:hint="Enter your mobile number"
        android:inputType="phone" />

    <!-- Call Button -->
    <Button
        android:id="@+id/callButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:layout_below="@id/numberInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/nextbutton"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-144dp"
        android:layout_marginBottom="391dp"
        android:layout_toEndOf="@id/callButton"
        android:text="NAVIGATE NEXT" />


</RelativeLayout>
